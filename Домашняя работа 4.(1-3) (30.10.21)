#include <iostream>
using namespace std;
void print_array(int* array, int N) {
	for (int i = 0; i < N; i++) {
		cout << array[i] << " ";
	}
}
void task_1(int* array, int N, int diff) {
	for (int i = 0; i < N; i++) {
		array[i + 1] = array[i] + diff;
	}
	cout << "Арифметическая прогрессия: ";
	print_array(array, N);
}
void task_2(int* array, int N) {
	srand(time(0));
	for (int i = 0; i < N; i++) {
		array[i] = i+1;
	}
	print_array(array, N);
	cout << endl;
	cout << "Перестановка" << endl;
	for (int i = N; i > 1; i--) {
		int k = rand() % i;
		int s = array[i-1];
		array[i-1] = array[k];
		array[k] = s;
	}
	print_array(array, N);
}
void task_3(int* array, int N) {
	srand(time(0));
	int j = 0;
	for (int i = 0; i < N; i++) {
		array[i] = rand() % 1001 + 1000;
	}
	print_array(array, N);
	cout << endl;
	for (int i = 0; i < N; i++) {
		if (array[i] % 2 == 0) {
			j++;
		}
	}
	cout << "Количество четных чисел: " << j;
}
int main() {
	setlocale(LC_ALL, "Russian");
	int a, N;
	cout << "Введите № задачи" << " ";
	cin >> a;
	cout << "Введите размер массива ";
	cin >> N;
	int* array = new int[N];
	if (a == 1) {
		int diff;
		cout << "Введите разность ";
		cin >> diff;
		cout << "Введите первый элемент массива ";
		cin >> array[0];
		task_1(array, N, diff);
	}
	if (a == 2) {
		array[0] = 1;
		task_2(array, N);
	}
	if (a == 3) {
		task_3(array, N);
	}
	return 0;
	delete[] array;
}
